<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox fx:id="item" alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-border-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="avatar" disable="true" ellipsisString="" mnemonicParsing="false" prefHeight="52.0" prefWidth="52.0" style="-fx-background-radius: 100; -fx-border-radius: 100; -fx-background-color: #abc; -fx-font-size: 23px;" text="Button">
         <font>
            <Font size="23.0" />
         </font>
         <HBox.margin>
            <Insets left="8.0" right="8.0" />
         </HBox.margin>
      </Button>
      <VBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="122.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox prefHeight="26.0" prefWidth="140.0" VBox.vgrow="NEVER">
               <children>
                  <Text fx:id="name" fill="#272727" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Name">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="8.0" />
                     </HBox.margin>
                  </Text>
                  <Pane prefHeight="200.0" prefWidth="200.0" />
                  <Text fill="#5b5b5b" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 10px;">
                     <font>
                        <Font name="Arial" size="11.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="8.0" top="2.0" />
                     </HBox.margin>
                  </Text>
               </children>
            </HBox>
            <Text fx:id="lastmsg" fill="#5b5b5b" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 12px;">
               <font>
                  <Font size="12.0" />
               </font>
            </Text>
         </children>
      </VBox>
   </children>
</HBox>
